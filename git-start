#!/bin/bash
# git-start: Create and switch to a new branch easily

if [ -z "$1" ]; then
  echo "❌ Please provide a branch name"
  echo "👉 Usage: git start <branch-name>"
  exit 1
fi

BRANCH=$1

# Fetch latest changes from remote main
git fetch origin main >/dev/null 2>&1

# Checkout main and pull latest
git checkout main >/dev/null 2>&1 && git pull origin main >/dev/null 2>&1

# Create and switch to new branch
git checkout -b "$BRANCH"

echo "✅ Switched to new branch: $BRANCH"
