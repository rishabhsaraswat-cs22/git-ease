#!/bin/bash
# git-resume: Restore your last saved WIP commit

# Check if there are commits in history
if [ -z "$(git log -1 --pretty=format:'%h')" ]; then
  echo "âŒ No commits found to resume."
  exit 1
fi

# Get the last commit message
LAST_MSG=$(git log -1 --pretty=%B)

# If the last commit was a WIP commit
if [[ "$LAST_MSG" == WIP:* ]]; then
  echo "ğŸ”„ Resuming from last WIP commit..."
  git reset --soft HEAD~1
  echo "âœ… Changes restored into working directory."
else
  echo "âš ï¸ Last commit is not marked as WIP. Nothing to resume."
fi
