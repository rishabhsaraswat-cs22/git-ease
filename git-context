#!/bin/bash
# git-context: Quickly switch to an existing branch

# Get list of local branches sorted by last commit date
BRANCHES=$(git branch --sort=-committerdate | sed 's/*//')

if [ -z "$BRANCHES" ]; then
  echo "‚ùå No branches found"
  exit 1
fi

echo "üìÇ Available branches:"
select BRANCH in $BRANCHES; do
  if [ -n "$BRANCH" ]; then
    git checkout "$BRANCH"
    echo "‚úÖ Switched to branch: $BRANCH"
    break
  else
    echo "‚ùå Invalid choice, try again."
  fi
done
